<h1>Listing posts</h1>


  <% @posts.each do |post| %>
    <div class="post-box" >
    <p>
        <h1><%= post.title %></h1>
    </p>

    <p>
        <%= post.text %>
    </p>
    </div>
  <%end%>


<%= link_to 'New post', new_post_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @posts.each do |post| %>
      <tr>
        <td><%= post.title%></td>
        <td><%= post.text%></td>
        <td><%= link_to 'Show', post_path(post) %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post_path(post), method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <%end%>
</table>