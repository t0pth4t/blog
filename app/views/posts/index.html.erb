<!DOCTYPE html>

<html lang="en">

<head>
  <meta charset="utf-8">
  <title>Dat music doe.</title>

  <!--[if IE]>
  <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
  <!--[if lte IE 7]>
  <script src="js/IE8.js" type="text/javascript"></script><![endif]-->
  <!--[if lt IE 7]>

  <link rel="stylesheet" type="text/css" media="all" href="css/ie6.css"/><![endif]-->
</head>

<body id="index" class="home">

<%= render 'header' %>



    <aside id="featured" class="body">
      <article>
        <figure>
          <%= image_tag("shamelesstheft2.png", :alt => "rss feed") %>
        </figure>

        <hgroup>

          <h2>Upcoming releases</h2>
          <h3><a href="#">October releases</a></h3>
        </hgroup>

      </article>
    </aside>

    <section id="content" class="body">

      <ol id="posts-list" class="hfeed">
        <% @posts.each do |post| %>
        <li><article class="hentry">
          <header>
            <h2 class="entry-title"><%= link_to post.title, post_path(post) %></h2>
          </header>

          <footer class="post-info">
            <abbr class="published" title=<%= post.created_at %>><!-- YYYYMMDDThh:mm:ss+ZZZZ -->
              <%= post.created_at.to_formatted_s(:short) %>
            </abbr>


            <address class="vcard author">
              By <a class="url fn" href="#"><%if(post.user_id) %>
                                                <%=User.find(post.user_id).email%>
                                            <% end %></a>

            </address>
          </footer><!-- /.post-info -->

          <div class="entry-content">
            <%= post.text %>
            <% if can? :edit, post %>
                <%= link_to 'Edit', edit_post_path(post) %>   |
            <% end %>
            <% if can? :destroy, post %>
                <%= link_to 'Delete', post_path(post), method: :delete, data: {confirm: 'Are you sure?'} %>
            <% end %>
            <div class="social"></div>
          </div><!-- /.entry-content -->
        </article></li>
        <%end%>
        <% if can? :create, @posts %>
         <div style="text-align: right"><%= link_to 'New post', new_post_path %>        </div>
        <%end%>
      </ol><!-- /#posts-list -->

    </section><!-- /#content -->

    <section id="extras" class="body">


      <div class="social">
        <h2>social</h2>
        <ul>

          <li><a href="http://delicious.com/" rel="me">delicious</a></li>
          <li><a href="http://digg.com/" rel="me">digg</a></li>
          <li><a href="http://facebook.com/" rel="me">facebook</a></li>

          <li><a href="http://www.last.fm/" rel="me">last.fm</a></li>
          <li><a href="http://website.com/feed/" rel="alternate">rss</a></li>
          <li><a href="http://twitter.com/" rel="me">twitter</a></li>

        </ul>
      </div><!-- /.social -->
    </section><!-- /#extras -->

    <footer id="contentinfo" class="body">
      <address id="about" class="vcard body">
		<span class="primary">
			<strong><a href="#" class="fn url">Dat music doe.</a></strong>

			<span class="role">SwagSwag</span>
		</span><!-- /.primary -->

        <%= image_tag("tybg.png", :alt => "Thank you BG") %>
        <span class="bio">Dat music doe. Thank you Based God!</span>

      </address><!-- /#about -->
      <p>2013 <a href="http://reddit.com">Dat music doe.</a></p>
    </footer><!-- /#contentinfo -->

    <div style="display:none">
      <table>
        <tr>
          <th>Title</th>
          <th>Text</th>
        </tr>

        <% @posts.each do |post| %>
            <tr>
              <td><%= post.title%></td>
              <td><%= post.text%></td>
              <td><%= link_to 'Show', post_path(post) %></td>
              <td><%= link_to 'Edit', edit_post_path(post) %></td>
              <td><%= link_to 'Destroy', post_path(post), method: :delete, data: {confirm: 'Are you sure?'} %></td>
            </tr>
        <%end%>
      </table>
    </div>


</body>

</html>

