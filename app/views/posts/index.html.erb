

    <div class="well jumbotron">
      <div class="container">
        <h2>Upcoming releases</h2>
        <h3><a href="#">October releases</a></h3>
        <%= image_tag("shamelesstheft2.png", :alt => "rss feed") %>
      </div>
    </div>




        <% @posts.each do |post| %>
    <div class="well" >
          <section id="content" class="posts-body">


              <article class="post">
                  <header>
                    <h2 class="post-title"><%= link_to post.title, post_path(post) %></h2>
                  </header>

                  <footer class="post-info">
                    <abbr class="published" title=<%= post.created_at %>><!-- YYYYMMDDThh:mm:ss+ZZZZ -->
                      <%= post.created_at.to_formatted_s(:short) %>
                    </abbr>


                    <address class="vcard author">
                      By <a class="url fn" href="#"><%if(post.user_id) %>
                                                        <%=User.find(post.user_id).email%>
                                                    <% end %></a>

                    </address>
                  </footer><!-- /.post-info -->

                   <div class="entry-content">
                       <p class="lead"><%= post.text %></p>
                        <% if can? :edit, post %>
                            <%= link_to 'Edit', edit_post_path(post) %>   |
                        <% end %>
                        <% if can? :destroy, post %>
                            <%= link_to 'Delete', post_path(post), method: :delete, data: {confirm: 'Are you sure?'} %>
                        <% end %>
                   </div>
              </article>

            <!-- /.entry-content -->


            <% if can? :create, @posts %>
                <div style="text-align: right"><%= link_to 'New post', new_post_path %>        </div>
            <%end%>
        </section>
    </div>
    <%end%>

  <!-- /#posts-list -->

 <!-- /#content -->


    <div style="display:none">
      <table>
        <tr>
          <th>Title</th>
          <th>Text</th>
        </tr>

        <% @posts.each do |post| %>
            <tr>
              <td><%= post.title%></td>
              <td><%= post.text%></td>
              <td><%= link_to 'Show', post_path(post) %></td>
              <td><%= link_to 'Edit', edit_post_path(post) %></td>
              <td><%= link_to 'Destroy', post_path(post), method: :delete, data: {confirm: 'Are you sure?'} %></td>
            </tr>
        <%end%>
      </table>
    </div>


</body>

</html>

