

    <div class="well jumbotron">
      <div class="container">
        <h2>Upcoming releases</h2>
        <h3><a href="#">October releases</a></h3>
        <%= image_tag("shamelesstheft2.png", :alt => "rss feed") %>
      </div>
    </div>




        <% @posts.each do |post| %>
    <div class="well post-body" id="main">


                  <header>
                    <h2 class="post-title"><%= link_to post.title, post_path(post) %></h2>
                  </header>

                  <div class="post-info">
                      <%= post.created_at.to_formatted_s(:short) %>
                      By <a class="url fn" href="#"><%if(post.user_id) %>
                                                        <%=User.find(post.user_id).email%>
                                                    <% end %></a>


                  </div><!-- /.post-info -->

                   <div class="post-content">
                       <p class="lead"><%= post.text %></p>
                   </div>


            <!-- /.entry-content -->
                <div class=" btn-group">
                  <% if can? :create, @posts %>
                      <%= link_to 'New post', new_post_path,:class=>"btn btn-primary" %>
                  <%end%>
            <% if can? :edit, post %>
                <%= link_to 'Edit', edit_post_path(post), :class=>"btn btn-success" %>
            <% end %>
            <% if can? :destroy, post %>
                <%= link_to 'Delete', post_path(post), method: :delete, data: {confirm: 'Are you sure?'},:class=>"btn btn-danger" %>
            <% end %>

                </div>

    </div>
    <%end%>

  <!-- /#posts-list -->

 <!-- /#content -->


    <div style="display:none">
      <table>
        <tr>
          <th>Title</th>
          <th>Text</th>
        </tr>

        <% @posts.each do |post| %>
            <tr>
              <td><%= post.title%></td>
              <td><%= post.text%></td>
              <td><%= link_to 'Show', post_path(post) %></td>
              <td><%= link_to 'Edit', edit_post_path(post) %></td>
              <td><%= link_to 'Destroy', post_path(post), method: :delete, data: {confirm: 'Are you sure?'} %></td>
            </tr>
        <%end%>
      </table>
    </div>


</body>

</html>

