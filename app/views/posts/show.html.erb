<%= render 'header' %>

<article id="display-article" class="body">
          <hgroup>


    <h2><%= @post.title %></h2>


  <p>
    <%= @post.text %>      <br />
    <%= link_to 'Back', posts_path, :class => "button" %>
    <% if can? :edit, @posts %>
    | <%= link_to 'Edit', edit_post_path(@post), :class => "button" %>
    <% end %>
  </p>
          </hgroup>
</article>


 <article id="comments" class="body">
   <h2>Comments</h2>
   <%= render @post.comments %>

   <h2>Add a comment:</h2>
   <%= render "comments/form" %>




 </article>

