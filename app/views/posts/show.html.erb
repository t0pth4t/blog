<div class="post-box" >
  <p>
    <h1><%= @post.title %></h1>
  </p>

  <p>
    <%= @post.text %>
  </p>
 <div class="comments-box">
   <h2>Comments</h2>
   <%= render @post.comments %>

   <h2>Add a comment:</h2>
   <%= render "comments/form" %>


   <%= link_to 'Back', posts_path, :class => "button" %>
   | <%= link_to 'Edit', edit_post_path(@post), :class => "button" %>
 </div>

</div>