
    <div class="well post-body" id="main">

      <header>
        <h2 class="post-title"><%= link_to post.title, post_path(post) %></h2>
      </header>

      <div class="post-info">
        <%= post.created_at.strftime('%A, %b %d') %>
        By <a class="url fn" href="#">
        <%if(post.user_id) %>
            <%=User.find(post.user_id).email.partition('@').first%>
        <% end %></a>
      </div><!-- /.post-info -->

      <% if post.image %>
        <%= image_tag(post.image, :class => "post-image")%>
      <% end %>

      <div class="post-content">
        <p class="lead"><%= post.text.html_safe %></p>


        <% for song in post.songs %>
               <div style="padding-bottom: 10px; padding-top: 10px">
            <h4 style="color: #000"> <%= song.title.html_safe %></h4>  <audio id="audio-player" src="<%= song.source %>" type="audio/mp3" controls="controls" preload="none">   </audio>
               </div>
        <% end %>

      </div>

      <div class=" btn-group">
        <% if can? :destroy, post %>
            <%= link_to 'Delete', post_path(post), method: :delete, data: {confirm: 'Are you sure?'},:class=>"btn btn-danger" %>
        <% end %>
        <% if can? :edit, post %>
            <%= link_to 'Edit', edit_post_path(post), :class=>"btn btn-success" %>
        <% end %>
      </div>
      <span style="font: normal 1.5em 'Trebuchet MS', Tahoma, Helvetica, Arial, sans-serif; float: right"><%= link_to "Comments #{post.comments.count}", post_path(post, anchor: "comments") %></span>
    </div>

    <script>
        $('video,audio').mediaelementplayer(     {
                features: ['playpause','progress','duration']

                  }
        )
    </script>