<div class="well" style="background-color: #FFFFFF">
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>


  <p>
    <% if can? :destroy, comment %>
        <%= link_to 'Delete Comment', [comment.post, comment], method: :delete, data: {confirm: 'Are you sure?'},:class=>"btn-small btn-danger"  %>
    <% end %>
  </p>
</div>
