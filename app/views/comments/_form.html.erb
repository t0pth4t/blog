<%= form_for([@post, @post.comments.build], :html => {:class =>'form-horizontal'}) do |f| %>
    <fieldset>


      <div class="control-group">
        <%= f.label :commenter, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :commenter, :class => 'text_field' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :body, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_area :body,:rows => 5, :class => 'text_area' %>
        </div>
      </div>

      <div class="form-actions">
        <%= f.submit nil, :class => 'btn btn-primary pull-right' %>
      </div>

    </fieldset>
<% end %>